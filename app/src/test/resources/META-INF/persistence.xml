<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="test">
        <class>bookkeeper.dao.entity.TelegramUser</class>
        <class>bookkeeper.dao.entity.Account</class>
        <class>bookkeeper.dao.entity.AccountTransaction</class>
        <class>bookkeeper.dao.entity.AccountTransfer</class>
        <class>bookkeeper.dao.entity.MerchantExpenditure</class>
        <class>bookkeeper.dao.entity.ExchangeRate</class>
        <properties>
            <property name="hibernate.dialect" value="tech.ydb.hibernate.dialect.YdbDialect"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create-drop"/>
            <property name="hibernate.connection.pool_size" value="1"/>
            <property name="jakarta.persistence.jdbc.driver" value="tech.ydb.jdbc.YdbDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:ydb:grpc://localhost:2136/local"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
        </properties>
    </persistence-unit>
</persistence>